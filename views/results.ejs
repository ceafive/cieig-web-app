<div class="table-responsive">	
<table class="table table-striped table-bordered"> 
	<h3>Results</h3>
	<thead>
		<th class="text-center">Month</th> 
		<th class="text-center">Year</th> 
		<th class="text-center">Description</th>
		<th class="text-center">Cost Index</th>
	<% if(currentUser && currentUser.isAdmin){ %>
		<th class="text-center">Admin</th>
	<% } %>
	<thead>
		<tbody>
	<% results.forEach(function(result){ %>
			<tr> 
				<td><%= result.month %></td>
				<td><%= result.year %></td>
				<td><%= result.description %></td>
				<td class="text-format"><%= result.costIndex %></td>
		<% if(currentUser && currentUser.isAdmin){ %>
				<td>
					<form class="form" action="/results/<%= result._id %>?_method=DELETE" method="POST">
						<button class="btn btn-danger btn-xs text-center">Delete</button>
					</form>
				</td>
		<% } %>
			</tr>
	<% }); %>
		</tbody>
</table>
</div>
<% } %>
